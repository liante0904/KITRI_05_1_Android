<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7">
            <Button
                android:id="@+id/lay03_Button01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="이미지 버튼 바꾸기"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/lay03_ImageButton01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/kaka01"
                    /></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/lay03_ImageButton02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"

                    android:src="@drawable/kaka02"/></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/lay03_ImageButton03"
                    android:layout_width="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"

                    android:layout_height="match_parent"
                    android:src="@drawable/kaka03"/></LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">
            <TextView
                android:id="@+id/vlayoutText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="텍스트"
                android:gravity="center"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/lay03_Imageview01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kaka01"/>

                <ImageView
                    android:id="@+id/lay03_Imageview02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kaka02"/>
                <ImageView
                    android:id="@+id/lay03_Imageview03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kaka03"/>
            </FrameLayout>
           </LinearLayout>
    </LinearLayout>
</LinearLayout>
