<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="2">
    <TableRow>
        <TextView
            android:text="Open"
            android:layout_column="1"/>

        <TextView
            android:text="Ctrl-O"
            android:layout_column="3"/>


    </TableRow>
    <TableRow>


        <TextView
            android:text="Save"
            android:layout_column="1"/>

        <TextView
            android:text="Ctrl-S"
            android:layout_column="3"/>

    </TableRow>
    <TableRow>
        <TextView
            android:text="Save As..."
            android:layout_column="1"/>

        <TextView
            android:text="Ctrl-Shift-s"
            android:layout_column="3"/>

    </TableRow>
    <View
        android:layout_height="3px"
        android:background="#000000"
        />

    <TableRow>
        <TextView
            android:text="X "
            android:layout_column="0"/>
        <TextView
            android:text="Import..."
            android:layout_column="1"/>



    </TableRow>

    <TableRow>
        <TextView
            android:text="X "
            android:layout_column="0"/>
        <TextView
            android:text="Export...."
            android:layout_column="1"/>

        <TextView
            android:text="Ctrl-E"
            android:layout_column="3"/>


    </TableRow>
    <View
        android:layout_height="3px"
        android:background="#000000"
        />
    <TableRow>
        <TextView
            android:text="Quit"
            android:layout_column="1"/>


    </TableRow>
</TableLayout>
