<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">

    <TableLayout
        android:id="@+id/lotto_resultLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_weight="1">
            <ImageView
                android:id="@+id/lotto_result1"
                android:src="@drawable/b00"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/lotto_result2"
                android:src="@drawable/b00"
                android:layout_weight="1"

                />

            <ImageView
                android:id="@+id/lotto_result3"
                android:src="@drawable/b00"
                android:layout_weight="1"

                />

            <ImageView
                android:id="@+id/lotto_result4"
                android:src="@drawable/b00"
                android:layout_weight="1"

                />

            <ImageView
                android:id="@+id/lotto_result5"
                android:src="@drawable/b00"
                android:layout_weight="1"

                />

            <ImageView
                android:id="@+id/lotto_result6"
                android:src="@drawable/b00"
                android:layout_weight="1"

                />
        </TableRow>


    </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="press image"/>
        <ImageButton
            android:id="@+id/lotto_go"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/home"/>
    </LinearLayout>

</LinearLayout>
