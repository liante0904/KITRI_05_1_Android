<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.0001"
        android:orientation="horizontal">

        <Button
            android:id="@+id/paint_ex04_redBT"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Red"/>



        <Button
            android:id="@+id/paint_ex04_blueBT"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Blue"/>

        <Button
            android:id="@+id/paint_ex04_orangeBT"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Orange"/>

        <Button
            android:id="@+id/paint_ex04_thinBT"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thin"/>

        <Button
            android:id="@+id/paint_ex04_thickBT"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thick"/>

        <Button
            android:id="@+id/paint_ex04_resetBT"
            android:textSize="10sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Reset"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">

    </LinearLayout>

    <com.exam.andex.widgetmenu.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </LinearLayout>-->
</LinearLayout>
