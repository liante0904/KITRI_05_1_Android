<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/memtop_topTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >




        </TableLayout>


        <TextView
            android:id="@+id/memtop_maintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="**JOIN**"
            android:textSize="30sp"
            android:layout_below="@+id/memtop_topTable"
            android:layout_centerHorizontal="true"

            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/memtop_btlayout"
            android:layout_below="@+id/memtop_maintext"
            >



            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="name"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@color/colororange"

                    />

                <EditText
                    android:layout_marginRight="5dp"
                    android:layout_height="150px"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"

                    />
            </TableRow>


            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="ID"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@color/colororange"


                    />

                <EditText
                    android:layout_marginRight="5dp"
                    android:layout_height="150px"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"

                    />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="passwd"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@color/colororange"
                    />


                <EditText
                    android:layout_marginRight="5dp"
                    android:layout_height="150px"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"

                    />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="email"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:background="@color/colororange"
                    />

                <EditText
                    android:layout_marginRight="5dp"
                    android:layout_height="150px"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"

                    />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="phone"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:background="@color/colororange"

                    />

                <EditText
                    android:layout_marginRight="5dp"
                    android:layout_height="150px"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"

                    />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="address"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:background="@color/colororange"

                    />

                <EditText
                    android:layout_marginRight="5dp"
                    android:layout_height="150px"
                    android:layout_width="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_weight="1"

                    />
            </TableRow>



        </TableLayout>

        <LinearLayout
            android:id="@+id/memtop_btlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/memtop_endtext"
            >


            <Button
                android:layout_height="wrap_content"
                android:layout_width="0dp"

                android:layout_alignParentLeft="true"
                android:text="Join"
                android:layout_weight="1"
                />

            <Button

                android:layout_height="wrap_content"
                android:layout_width="0dp"

                android:text="Cancle"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/memtop_endtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="한국정보기술연구원 웹앱 프로그래밍 과정"
            android:layout_alignParentBottom="true"
            />



    </RelativeLayout>


</LinearLayout>




